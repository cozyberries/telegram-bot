{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/",
      "status": 301,
      "headers": { "Location": "/health" }
    },
    {
      "src": "/webhook",
      "dest": "/api/webhook.py"
    },
    {
      "src": "/notify-order",
      "dest": "/api/notify-order.py"
    },
    {
      "src": "/health",
      "dest": "/api/health.py"
    },
    {
      "src": "/help",
      "dest": "/api/help.py"
    },
    {
      "src": "/docs",
      "dest": "/api/docs.py"
    }
  ],
  "env": {
    "PYTHON_VERSION": "3.13"
  }
}
