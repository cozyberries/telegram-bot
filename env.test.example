# Test Environment Configuration
# Copy this file to .env.test and update with your test values

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_test_bot_token_here
ADMIN_USER_IDS=123456789,987654321

# Supabase Configuration (use test database)
SUPABASE_URL=https://your-project-test.supabase.co
SUPABASE_KEY=your_test_supabase_anon_key_here
SUPABASE_SERVICE_KEY=your_test_supabase_service_key_here

# Testing Configuration
TESTING=true
LOG_LEVEL=WARNING

# Logfire Configuration (optional for tests)
LOGFIRE_TOKEN=your_logfire_test_token_here
LOGFIRE_ENVIRONMENT=test

# Test Data Configuration
TEST_USER_ID=user_test_123
TEST_ADMIN_ID=admin_test_456
TEST_EXPENSE_ID=exp_test_789

# API Configuration
API_BASE_URL=http://localhost:8000
WEBHOOK_SECRET=test_webhook_secret_key

# Database Configuration
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# Rate Limiting (for load tests)
RATE_LIMIT_ENABLED=false
MAX_REQUESTS_PER_MINUTE=1000

# Feature Flags for Testing
ENABLE_EXPENSE_APPROVAL=true
ENABLE_NOTIFICATIONS=false
ENABLE_ANALYTICS=false

# Mock Services (set to true to use mocks instead of real services)
MOCK_SUPABASE=false
MOCK_TELEGRAM=true
MOCK_NOTIFICATIONS=true
